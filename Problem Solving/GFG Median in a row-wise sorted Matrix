class Solution {
    public int median(int[][] mat) {
        // code here
        int[] ans = new int[mat.length * mat[0].length];
        int k = 0 ;
        for(int i = 0 ; i < mat.length ; i++)
        {
            for(int j = 0 ; j < mat[0].length ; j++)
            {
                ans[k++] = mat[i][j];
            }
        }
        Arrays.sort(ans);
        return ans[k / 2];
    }
}

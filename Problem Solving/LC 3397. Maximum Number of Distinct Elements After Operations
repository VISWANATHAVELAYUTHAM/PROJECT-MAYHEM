class Solution {
    int maxDistinctElements(int[] nums, int k) {
    int ans = 0;
    Arrays.sort(nums);
    for(int i = 0, last = Integer.MIN_VALUE; i < nums.length; ++i){
        int mn = nums[i] - k;
        int mx = nums[i] + k;
        if(last < mn ) { last = mn; ans++; }
        else if(last < mx){ last = last + 1; ans++; }
    }
    return ans;
}
}

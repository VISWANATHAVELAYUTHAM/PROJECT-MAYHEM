class Solution{
    static int maxLength(String S){
        Stack<Integer> stack = new Stack<>();
        
        stack.push(-1);
        int maxLength = 0;
        
        for(int i=0; i<S.length(); i++){
            char ch = S.charAt(i);
            
            if(ch=='('){
                stack.push(i);
            }
            else{
                stack.pop();
                
                if(stack.isEmpty()){
                    stack.push(i);
                }
                else{
                    maxLength = Math.max(maxLength, i-stack.peek());
                }
            }
        }
        return maxLength;
    }
}

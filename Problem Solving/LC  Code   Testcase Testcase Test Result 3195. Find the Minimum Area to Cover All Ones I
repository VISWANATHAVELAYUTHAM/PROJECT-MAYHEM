class Solution {
   public int minimumArea(int[][] grid) {
        int m = grid.length;
        int n = grid[0].length;
        
        int top = m; 
        int bottom = 0; 
        int left = n;
        int right = 0;
        
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                if (grid[i][j] == 1) {
                    top = Math.min(top, i);
                    bottom = Math.max(bottom, i);
                    left = Math.min(left, j);
                    right = Math.max(right, j);
                }
            }
        }
        
        int width = right - left + 1;
        int height = bottom - top + 1;
        int area = width * height;
        
        return area;
    }
}

class Solution {
    // Function to reverse words in a given string.
    String reverseWords(String str) {
        // code here
        String ans = "";
        String[] arr = str.split("\\.");
        for(int i = arr.length-1; i>=0; i--){
            if(i==0){
                ans += arr[i];
            }else{
                ans += arr[i] + ".";
            }
        }
        return ans;
    }
}

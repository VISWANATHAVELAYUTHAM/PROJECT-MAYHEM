import java.util.Arrays;
class Solution {
    public int maxSum(int[] nums) {
        Arrays.sort(nums); // ğŸ”ƒ Sort the array
        int lastSeen = nums[nums.length - 1];
        int sum = lastSeen;
        for (int i = nums.length - 2; i >= 0; i--) {
            int current = nums[i];
            if (current <= 0) return sum; // ğŸš« Ignore non-positives
            if (current != lastSeen) sum += current; // âœ… Add if unique
            lastSeen = current;
        }
        return sum; // ğŸ¯ Final result
    }
}

import java.util.PriorityQueue;

class Solution {
    public static int minCost(int[] arr) {
        if (arr == null || arr.length <= 1) return 0;

        PriorityQueue<Integer> pq = new PriorityQueue<>();
        for (int i = 0; i < arr.length; i++) pq.add(arr[i]);

        long totalCost = 0L;
        while (pq.size() > 1) {
            int a = pq.poll();
            int b = pq.poll();
            int combined = a + b;
            totalCost += combined;
            pq.add(combined);
        }

        
        return (int) totalCost;
    }

}
